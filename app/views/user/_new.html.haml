= content_for :title, "Regístrate"

= form_for @user, html: { class: "user-form" } do |f|
  .form-inline.form-group
    .col-xs-4= f.label :name, "Nombre:"
    = f.text_field :name, class: "form-control", required: true

  .form-inline.form-group
    .col-xs-4= f.label :identification, "Cedula:"
    = f.text_field :identification, class: "form-control", required: true

  .form-inline.form-group
    .col-xs-4= f.label :email, "Email:"
    = f.email_field :email, class: "form-control", required: true

  .form-inline.form-group
    .col-xs-4= f.label :phone, "Telefono:"
    = f.text_field :phone, class: "form-control", required: true

  .form-inline.form-group
    .col-xs-4= f.label :code, "Código:"
    = f.text_field :code, class: "form-control", required: true

  .form-inline.form-group.text-center
    .col-xs-4.col-xs-offset-1
      = f.submit "Enviar", class: "btn btn-primary"